= form_for @ciudad do |f|
  #error_explanation.bg-danger.text-danger
  .row
    .col-sm-6
      .form-group
        = f.label :departamento, :class => "control-label"
        = collection_select(:ciudad, :departamento_id, @deptos, :id, :nombre, {prompt: 'Selecione departamento'})
      .form-group
        = f.label :codigo, :class => "control-label"
        = f.text_field :codigo, :class => "form-control first_input"
      .form-group
        = f.label :nombre, :class => "control-label"
        = f.text_field :nombre, :class => "form-control"
      .form-group
        = f.submit  @ciudad.new_record? ? "Crear ciudad" : "Actualizar ciudad", :class => "btn btn-primary"