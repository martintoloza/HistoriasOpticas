.page-header{ :style => 'margin-bottom: 25px;' }
  .pull-right
    = link_to "Nuevo barrio", new_barrio_path, remote: true, :class => "btn btn-primary"
    = link_to 'Home', root_path, :style => 'display: inline-block; margin-top: 25px;'
  %h1 Barrios

.well
  = form_for_filterrific @filterrific do |f|
    .row
      .col-md-3
        .form-group.chardin_box{ :'data-position' => 'top', :'data-intro' => 'Buscar por nombre' }
          = f.text_field :search_query,
                         class: 'filterrific-periodically-observed form-control',
                         placeholder: 'Busqueda'
      .col-md-3
        .form-group.chardin_box{ :'data-position' => 'bottom', :'data-intro' => 'Restablecer los ajustes del filtro a los valores predeterminados.' }
          = link_to "Restablecer los filtros", reset_filterrific_url, :class => 'btn btn-default btn-sm'

#results
  = render partial: 'barrios/list',
           locals: { :barrios => @barrios }

:javascript
  $('#overlayTrigger').click(function(event) {
    event.preventDefault();
    $('body').chardinJs('start');
  });
